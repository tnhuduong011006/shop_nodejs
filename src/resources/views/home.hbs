<div class="mt-3">
	<div class="row">
		<div class="col-lg-3 mt-5 mb-4">

				<div class="list-group">
					<a href="#" class="list-group-item list-group-item-action active" aria-current="true">
						Danh mục sản phẩm
					</a>
					{{#each types}}
						<a href="/products/filter/{{this._id}}" class="list-group-item list-group-item-action">{{this.name}}</a>
					{{/each}}
  
				</div>
		</div>

		<div class="col">
			<div class="row">
				<div class="row row-cols-1 row-cols-md-3 g-4"> 
					{{#each products}}
						
							<div class="col">
								<div class="card h-100">
									<div>
										<a href="/products/{{this.slug}}"><img src="{{this.url}}" class="card-img-top" alt="{{this.ten}}"></a>
									</div>
											
									<div class="card-body d-flex flex-column justify-content-between">
										<div>
											<a href="/products/{{this.slug}}" class="text-decoration-none"><h5 class="card-title">{{this.ten}}</h5></a>
										</div>
										
										<div class="d-flex flex-row justify-content-between">
											<div>
												<p class="text-danger fw-bold">{{convert this.gia}}₫</p>
											</div>
											<div>
												<a href="#" class="btn btn-success">Thêm</a>
											</div>
													
										</div>
									</div>
								</div>
							</div>		
						
					{{/each}}
				</div>
			</div>

		</div>

	</div>					
</div>